<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-autowire="byName">

    <bean name="arbitrateManageService" class="com.alibaba.otter.shared.arbitrate.impl.ArbitrateManageServiceImpl"
          scope="singleton"/>

    <!-- manage event -->
    <bean name="channelEvent" class="com.alibaba.otter.shared.arbitrate.impl.manage.ChannelArbitrateEvent"
          scope="singleton"/>
    <bean name="pipelineEvent" class="com.alibaba.otter.shared.arbitrate.impl.manage.PipelineArbitrateEvent"
          scope="singleton"/>
    <bean name="nodeEvent" class="com.alibaba.otter.shared.arbitrate.impl.manage.NodeArbitrateEvent" scope="singleton"/>
    <bean name="systemEvent" class="com.alibaba.otter.shared.arbitrate.impl.manage.SystemArbitrateEvent"
          scope="singleton"/>

    <bean name="zooKeeperHeartBeatWorker"
          class="com.alibaba.otter.shared.arbitrate.impl.zookeeper.ZooKeeperHeartBeatWorker" scope="singleton">
        <property name="nodeEvent" ref="nodeEvent"/>
    </bean>
</beans>